@model IngredientViewModel
@{
    var unitList = ((List<string>)ViewData["units"]).Select(x => new SelectListItem
            {
                Text = x,
                Value = x
            });
}
<li style="display:flex;">
    <input value="@Model.Name" asp-for="@Model.Name" class="form-control" />
    <input value="@Model.Quantity" asp-for="@Model.Quantity" class="form-control" />
    
    
    
    @* @Html.DropDownList("ingr", unitList, @Model.Units) *@

    @Html.DropDownListFor(m => m.Units, unitList, "Select units")
</li>
